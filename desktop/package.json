{
  "name": "wso2-tooling",
  "version": "0.0.1",
  "description": "WSO2 Integration Server Tooling",
  "main": "main.js",
  "scripts": {
    "start": "electron ../modules/sequence-diagram-editor/index.html",
    "clean": "rm -rf ./dist",
    "copyModules": "mkdir -p modules && cp -r ../modules/* modules",
    "dist": "npm run clean && npm run copyModules && build",
    "dist-all": "npm run clean && npm run copyModules && build -mwl --x64 --ia32",
    "prerelease:mac": "rm -rf distribution/mac && mkdirp distribution/mac",
    "release:mac": "copyfiles -f dist/mac/*.zip distribution/mac",
    "prerelease:win32": "rm -rf distribution/win32 && mkdirp distribution/win32",
    "release:win32": "copyfiles -f dist/wso2-tooling-0.0.1-ia32-win.zip distribution/win32",
    "prerelease:win64": "rm -rf distribution/win64 && mkdirp distribution/win64",
    "release:win64": "copyfiles -f dist/wso2-tooling-0.0.1-win.zip distribution/win64",
    "prerelease:linux32": "rm -rf distribution/linux32 && mkdirp distribution/linux32",
    "release:linux32": "copyfiles -f dist/wso2-tooling-0.0.1-ia32.zip distribution/linux32",
    "prerelease:linux64": "rm -rf distribution/linux64 && mkdirp distribution/linux64",
    "release:linux64": "copyfiles -f dist/wso2-tooling-0.0.1.zip distribution/linux64",
    "release": "run-p release:*",
    "all": "run-s dist-all release clean"
  },
  "author": {
    "name": "WSO2",
    "url": "https://wso2.com"
  },
  "repository": {
    "url": "https://github.com/wso2-incubator/js-tooling-framework"
  },
  "license": "Apache 2.0",
  "devDependencies": {
    "asar": "^0.12.3",
    "copyfiles": "^1.0.0",
    "electron": "^1.3.4",
    "electron-builder": "^7.10.1",
    "electron-packager": "^8.1.0",
    "fs-extra": "^0.30.0",
    "npm-run-all": "^3.1.0"
  },
  "build": {
    "appId": "wso2.integrationserver.tooling",
    "app-category-type": "public.app-category.productivity",
    "mac": {
      "target": [
        "zip"
      ]
    },
    "win": {
      "target": [
        "zip"
      ]
    },
    "linux": {
      "target": [
        "zip"
      ]
    }
  }
}